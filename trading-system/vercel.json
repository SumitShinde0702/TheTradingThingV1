{
  "buildCommand": "cd web && npm install && npm run build",
  "outputDirectory": "web/dist",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://trading-system-backend-zdd8.onrender.com/api/$1"
    },
    {
      "source": "/api-binance/(.*)",
      "destination": "https://trading-system-backend-zdd8.onrender.com/api/$1"
    },
    {
      "source": "/api-multi/(.*)",
      "destination": "https://trading-system-backend-zdd8.onrender.com/api/$1"
    },
    {
      "source": "/api-etf/(.*)",
      "destination": "https://trading-system-backend-zdd8.onrender.com/api/$1"
    },
    {
      "source": "/payment/(.*)",
      "destination": "https://your-payment-server.onrender.com/$1"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}

